<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">

    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
</head>

{% block header %}
<body>
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #41D1CC;" >
        <a class="navbar-brand" href="#">QUACKNET</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a href="{{ path('quack_home') }}" class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                </li>

                <li class="nav-item">
                    <a href="{{ path('quack_index') }}" class="nav-link" href="#">Quacks</a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('duckuser_index') }}"class="nav-link" href="#">Ducks</a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('app_register') }}" class="nav-link disabled" href="#">Register</a>
                </li>
                {%  if not app.user %}
                <li class="nav-item">
                    <a href="{{ path('app_login') }}"class="nav-link disabled" href="#">Log in</a>
                </li>
                {%else%}
                <li class="nav-item">
                    <a href="{{ path('app_logout') }}"class="nav-link disabled" href="#">Log out</a>
                </li>
                {% endif %}
                {% if is_granted('ROLE_USER') %}
                    <li class="nav-item">
                        <a href="{{ path('duckuser_account', {'id': app.user.id }) }}"class="nav-link disabled" href="#">My account</a>
                    </li>
                {% endif %}

            </ul>
        </div>
    </nav>


{% block javascripts %}{% endblock %}


{% endblock %}

{% block body %}
{% endblock %}
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
</body>

</html>
